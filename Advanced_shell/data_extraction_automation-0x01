#!/bin/bash

# Extract Pok√©mon Data - Task 1
# Extracts name, height, weight, and type from data.json

DATA_FILE="data.json"

# Check if data.json exists
if [ ! -f "$DATA_FILE" ]; then
    echo "Error: $DATA_FILE not found. Please run the API automation script first."
    exit 1
fi

# Extract data using jq and format with awk/sed
name=$(jq -r '.name' "$DATA_FILE" | sed 's/.*/\u&/')
height=$(jq -r '.height' "$DATA_FILE")
weight=$(jq -r '.weight' "$DATA_FILE")
type=$(jq -r '.types[0].type.name' "$DATA_FILE" | sed 's/.*/\u&/')

# Convert height from decimeters to meters and format
formatted_height=$(echo "scale=1; $height / 10" | bc -l | sed 's/^\./0./')

# Convert weight from hectograms to kilograms and format
formatted_weight=$(echo "scale=1; $weight / 10" | bc -l | sed 's/^\./0./' | sed 's/\.0$//')

# Format the output to match expected format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall." 